                ');

                Label.label_draw {
                    position: 150, 150;
                    stroke_color: #000000;
                    font_description: "Liberation Sans 14";
                    text: "Label drawing";
                }

                Label.label_draw2 {
                    position: 500, 150;
                    stroke_color: #000000;
                    font_description: "Liberation Sans 14";
                    text: "Label drawing 2";
                }

                Image.image_draw {
                    position: 300, 200;
                    size: 150, 200;
                    filename: '/usr/share/icons/SSIIcons/scalable/worksheet/meuh.svg';
                }

                Rectangle.rectangle_draw {
                    position: 200, 400;
                    size: 100, 100;
                    fill_color: "#00FF00";
                }

                Path.path_draw {
                    position: 200, 200;
                    path: 'M 0,0 L 50, 50 L 0, 50 Z';
                    fill_color: linear-gradient (0, 0, @width, 0,
                                                 color-stop (0, rgb (0, 1, 0)),
                                                 color-stop (1, rgb (0, 0, 1)));
                }
            }
        }
    }

    // Main content of worksheet
    Grid.main_2 {
        page: 2;
        border_line_width: 1;
        stroke_color: #000000;

        // Left title
        Label.title_2 {
            row: 0;
            column: 0;
            stroke_color: #000000;
            font_description: "Liberation Sans 17";
            text: "Page 2";
        }
    }
}
