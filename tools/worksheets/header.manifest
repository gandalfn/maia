// header
Grid.header {
	row_spacing: 5;
	grid-line-width: 1;
	stroke-pattern: #000000;
	Image.header_institution_logo {
		xexpand: false;
		yexpand: false;
		right-padding: 5;
		left-padding: 5;
		// TODO: Ask jessica to have smaller logo
		size: 165, 64;
	}

	Label.header_institution_name {
		column: 1;
		yexpand: false;
		right-padding: 5;
		left-padding: 5;
		font-description: "Liberation Sans 17";
	}

	Grid.header_exam_info {
		column: 2;
		xexpand: false;
		yexpand: false;
		homogeneous: true;

		Label.header_patient_name {
			right-padding: 5;
			left-padding: 5;
			font-description: "Liberation Sans 12";
			text: "Patient name";
		}

		Label.header_exam_date {
			row: 2;
			right-padding: 5;
			left-padding: 5;
			stroke-pattern: #000000;
			font-description: "Liberation Sans 12";
			text: "21/03/2012";
		}
	}
}
